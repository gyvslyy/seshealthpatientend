<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group2.seshealthpatient.Fragments.PatientInformationFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Information"
            android:layout_gravity="center"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/TextViewFirstName"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="First Name: "/>

            <EditText
                android:id="@+id/EditViewFirstName"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/TextViewLastName"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Last Name: "/>

            <EditText
                android:id="@+id/EditViewLastName"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/TextViewAge"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Age: "/>

            <EditText
                android:id="@+id/EditViewAge"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/TextViewGender"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Gender:  "/>

           <Spinner
               android:id="@+id/SpinnerGender"
               android:layout_width="110dp"
               android:layout_height="match_parent"
               android:entries="@array/Gender">

           </Spinner>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/TextViewHeight"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Height(cm): "/>

            <EditText
                android:id="@+id/EditViewHeight"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/TextViewWeight"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Weight(kg): "/>

            <EditText
                android:id="@+id/EditViewWeight"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/TextViewAdd"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Address: "/>

            <EditText
                android:id="@+id/EditViewAdd"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/TextViewMC"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Medical Condition: " />

            <EditText
                android:id="@+id/EditViewMC"
                android:layout_width="339dp"
                android:layout_height="59dp"
                android:inputType="textMultiLine"
                android:minLines="4" />
        </LinearLayout>

        <Button
            android:id="@+id/SaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="save"/>
        <Button
            android:id="@+id/ViewInfBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="View Information"/>

    </LinearLayout>>

</FrameLayout>
